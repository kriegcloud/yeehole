{
  "name": "@ye/domain",
  "description": "The domain package for YeetUnion",
  "version": "0.1.0",
  "bugs": "https://github.com/kriegcloud/yeet-union/issues",
  "homepage": "https://yeetunion.com",
  "imports": {
    "#*": "./src/*"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "restricted",
    "directory": "dist",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kriegcloud/yeet-union",
    "directory": "packages/domain"
  },
  "devDependencies": {
    "@effect/cli": "latest",
    "@effect/platform": "latest",
    "effect": "latest",
    "@effect/platform-node": "latest",
    "@effect/schema": "latest",
    "@types/doctrine": "latest",
    "@types/fs-extra": "latest",
    "@types/glob": "latest",
    "ts-node": "latest",
    "tsup": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "version": "changeset version && bun i",
    "release": "bun run build && changeset publish",
    "check": "tsc -b tsconfig.json",
    "codegen": "build-utils prepare-v2",
    "coverage": "vitest --coverage",
    "dtslint": "dtslint dtslint",
    "test": "vitest",
    "build": "tsup && pnpm copy-package-json",
    "copy-package-json": "ts-node scripts/copy-package-json.ts",
    "build:ts": "tsup",
    "exec:scratch": "tsx ./src/kernel/Brand.ts"
  },
  "type": "module"
}
