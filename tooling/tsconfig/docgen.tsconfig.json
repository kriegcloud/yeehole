{
  "$schema": "./schema.json",
  "exclude": ["${configDir}/src/internal/**/*.ts", "${configDir}/src/bin.ts"],
  "parseCompilerOptions": {
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ]
  }
}
