{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "VERCEL_URL",
    "NODE_ENV",
    "CI",
    "SKIP_ENV_VALIDATION",
    "PORT"
  ],
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!CHANGELOG.md",
        "!playwright.config.ts",
        "!e2e/**",
        "!.env.example",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": ["dist/**", "build/**"]
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [".tsbuildinfo/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!CHANGELOG.md"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!CHANGELOG.md"]
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "passThroughEnv": ["DATABASE_URL"],
      "inputs": ["drizzle/**"]
    },
    "db:generate": {
      "passThroughEnv": ["DATABASE_URL"],
      "inputs": ["src/schema/**", "drizzle.config.ts"],
      "outputs": ["drizzle/**"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:check": { "cache": false },
    "db:migrate:drop": { "cache": false },
    "db:pull": { "cache": false },
    "db:push": { "cache": false },
    "db:up": { "cache": false },
    "sync": { "cache": false },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    }
  }
}